apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: vault
  namespace: openshift-gitops
spec:
  destination:
    namespace: {{ ocp4_workload_gitops_vault_namespace }}
    server: 'https://kubernetes.default.svc'
  project: default
  source:
    path: charts/hashicorp-vault
    repoURL: {{ ocp4_workload_gitops_vault_gitops_repo }}
    targetRevision: {{ ocp4_workload_gitops_vault_gitops_repo_revision }}
  syncPolicy:
    automated: {}
    syncOptions:
      - CreateNamespace=true