kind: Namespace
apiVersion: v1
metadata:
  name: trusted-artifact-signer
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: cli-server
  namespace: {{ ocp4_workload_advanced_developer_suite_rhtas_cli_server_namespace }}
  labels:
    app: cli-server
spec:
  replicas: 1
  selector:
    matchLabels:
      app: cli-server
  template:
    metadata:
      labels:
        app: cli-server
    spec:
      containers:
      - name: cli-server
        image: {{ ocp4_workload_advanced_developer_suite_rhtas_cli_server_image }}
        ports:
        - containerPort: 8080
          name: http
          protocol: TCP
        resources:
          requests:
            cpu: 100m
            memory: 128Mi
          limits:
            cpu: 500m
            memory: 512Mi
        livenessProbe:
          tcpSocket:
            port: 8080
          initialDelaySeconds: 10
          periodSeconds: 10
        readinessProbe:
          tcpSocket:
            port: 8080
          initialDelaySeconds: 5
          periodSeconds: 5
---
apiVersion: v1
kind: Service
metadata:
  name: cli-server
  namespace: {{ ocp4_workload_advanced_developer_suite_rhtas_cli_server_namespace }}
  labels:
    app: cli-server
spec:
  ports:
  - name: http
    port: 80
    targetPort: 8080
    protocol: TCP
  selector:
    app: cli-server
  type: ClusterIP
---
apiVersion: route.openshift.io/v1
kind: Route
metadata:
  name: cli-server
  namespace: {{ ocp4_workload_advanced_developer_suite_rhtas_cli_server_namespace }}
  labels:
    app: cli-server
spec:
  to:
    kind: Service
    name: cli-server
  port:
    targetPort: http
  tls:
    termination: edge
    insecureEdgeTerminationPolicy: Redirect
